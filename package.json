{
  "name": "@gym/mcp-memory",
  "version": "1.0.0",
  "type": "module",
  "main": "./src/memory.mcp.ts",
  "exports": {
    ".": "./src/memory.mcp.ts",
    "./web": "./web/src/index.ts",
    "./memory.web": "./src/memory.web.ts"
  },
  "scripts": {
    "build:web": "npx tsx web/esbuild.config.ts",
    "watch:web": "npx tsx web/esbuild.config.ts --watch",
    "serve": "npx tsx src/memory.mcp.ts",
    "dev": "concurrently -n web,server -c cyan,green \"pnpm watch:web\" \"pnpm serve\""
  },
  "dependencies": {
    "@gym/mcp-core": "workspace:*",
    "@gym/helpers": "workspace:*",
    "preact": "^10.26.9",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.2"
  }
}
